{%- style -%}
  .shipping-banner.page-width img {
    width: 100%;
  }
{%- endstyle -%}

<div class="shipping-banner page-width">
  {%- if section.settings.shipping_banner != blank -%}
    <img srcset="{%- if section.settings.shipping_banner.width >= 375 -%}{{ section.settings.shipping_banner | image_url: width: 375 }} 375w,{%- endif -%}
                                                      {%- if section.settings.shipping_banner.width >= 750 -%}{{ section.settings.shipping_banner | image_url: width: 750 }} 750w,{%- endif -%}
                                                      {%- if section.settings.shipping_banner.width >= 1100 -%}{{ section.settings.shipping_banner | image_url: width: 1100 }} 1100w,{%- endif -%}
                                                      {%- if section.settings.shipping_banner.width >= 1500 -%}{{ section.settings.shipping_banner | image_url: width: 1500 }} 1500w,{%- endif -%}
                                                      {%- if section.settings.shipping_banner.width >= 1780 -%}{{ section.settings.shipping_banner | image_url: width: 1780 }} 1780w,{%- endif -%}
                                                      {%- if section.settings.shipping_banner.width >= 2000 -%}{{ section.settings.shipping_banner | image_url: width: 2000 }} 2000w,{%- endif -%}
                                                      {%- if section.settings.shipping_banner.width >= 3840 -%}{{ section.settings.shipping_banner | image_url: width: 3840 }} 3840w,{%- endif -%}
                                                      {%- if section.settings.shipping_banner.width >= 3000 -%}{{ section.settings.shipping_banner | image_url: width: 3000 }} 3000w,{%- endif -%}
                                                      {{ section.settings.shipping_banner | image_url }} {{ section.settings.shipping_banner.width }}w" sizes="100vw" src="{{ section.settings.shipping_banner | image_url: width: 1500 }}" loading="lazy" alt="{{ section.settings.shipping_banner.alt | escape }}" width="{{ section.settings.shipping_banner.width }}" height="{{ section.settings.shipping_banner.width | divided_by: section.settings.shipping_banner.aspect_ratio }}">
  {%- endif -%}
</div>

{% schema %}
  {
    "name": "Shipping Banner",
    "class": "section",
    "tag": "section",
    "settings": [
      {
        "type": "image_picker",
        "id": "shipping_banner",
        "label": "Upload Shipping banner"
      }
    ],
    "presets": [
      {
        "name": "Shipping Banner"
      }
    ]
  }
{% endschema %}